<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tituloWodXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/logo"
        android:background="@color/black"
        android:textSize="35dp"
        android:text="TREINO - W.O.D" />

    <EditText
        android:id="@+id/wodInputXML"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:ems="5"
        android:inputType="number"
        android:hint="Minutos" />

    <TextView
        android:id="@+id/wodCronoXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:background="@color/black"
        android:textSize="50dp"
        android:text="00:00" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wodIniciarXML"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/logo"
            android:textSize="20dp"
            android:text="Iniciar" />

        <Button
            android:id="@+id/wodResetXML"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/logo"
            android:text="Resetar" />

        <Button
            android:id="@+id/wodSetXML"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/logo"
            android:text="Set" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/exercicioWodXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:hint="Exercício" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="time"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="Tempo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/exercicio2WodXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:hint="Exercício" />

        <EditText
            android:id="@+id/editTextTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="time"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="Tempo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/exercicio3WodXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:hint="Exercício" />

        <EditText
            android:id="@+id/editTextTime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="time"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="Tempo"/>
    </LinearLayout>



</LinearLayout>